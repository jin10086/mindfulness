<svg width="192" height="192" viewBox="0 0 192 192" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- 背景圆形 -->
  <circle cx="96" cy="96" r="96" fill="url(#gradient)"/>
  
  <!-- 渐变定义 -->
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="leafGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4ade80;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#22c55e;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 冥想人物轮廓 -->
  <g transform="translate(96, 96)">
    <!-- 身体 -->
    <ellipse cx="0" cy="10" rx="25" ry="35" fill="rgba(255,255,255,0.9)"/>
    
    <!-- 头部 -->
    <circle cx="0" cy="-25" r="18" fill="rgba(255,255,255,0.9)"/>
    
    <!-- 手臂（莲花坐姿） -->
    <ellipse cx="-20" cy="5" rx="8" ry="15" fill="rgba(255,255,255,0.8)" transform="rotate(-30)"/>
    <ellipse cx="20" cy="5" rx="8" ry="15" fill="rgba(255,255,255,0.8)" transform="rotate(30)"/>
    
    <!-- 腿部（盘腿） -->
    <ellipse cx="-15" cy="35" rx="12" ry="8" fill="rgba(255,255,255,0.8)"/>
    <ellipse cx="15" cy="35" rx="12" ry="8" fill="rgba(255,255,255,0.8)"/>
  </g>
  
  <!-- 装饰性叶子 -->
  <g transform="translate(96, 96)">
    <path d="M-45,-20 Q-50,-30 -40,-35 Q-35,-25 -45,-20" fill="url(#leafGradient)" opacity="0.7"/>
    <path d="M45,-20 Q50,-30 40,-35 Q35,-25 45,-20" fill="url(#leafGradient)" opacity="0.7"/>
    <path d="M-50,40 Q-60,35 -55,25 Q-45,30 -50,40" fill="url(#leafGradient)" opacity="0.7"/>
    <path d="M50,40 Q60,35 55,25 Q45,30 50,40" fill="url(#leafGradient)" opacity="0.7"/>
  </g>
  
  <!-- 音波效果 -->
  <g transform="translate(96, 96)" opacity="0.3">
    <circle cx="0" cy="0" r="50" fill="none" stroke="rgba(255,255,255,0.6)" stroke-width="2"/>
    <circle cx="0" cy="0" r="60" fill="none" stroke="rgba(255,255,255,0.4)" stroke-width="1.5"/>
    <circle cx="0" cy="0" r="70" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="1"/>
  </g>
</svg>